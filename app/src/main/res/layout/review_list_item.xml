<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_view_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/description_font_size"
        android:textStyle="bold"
        tools:text="@string/placeholder_review_author" />

    <TextView
        android:id="@+id/text_view_review_content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:layout_marginBottom="@dimen/margin_standard"
        android:textSize="@dimen/description_font_size"
        android:textStyle="italic"
        tools:text="@string/placeholder_review_content" />

</LinearLayout>